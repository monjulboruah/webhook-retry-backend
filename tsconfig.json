{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",             // <--- Critical for ts-node
    "moduleResolution": "node",       // <--- Critical for resolving paths without extensions
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}